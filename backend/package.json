{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend del Sistema de GestiÃ³n de Calidad ISO 9001",
  "main": "index.js",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:create": "sequelize-cli db:create",
    "db:drop": "sequelize-cli db:drop",
    "db:migrate": "sequelize-cli db:migrate",
    "db:migrate:undo": "sequelize-cli db:migrate:undo",
    "db:migrate:undo:all": "sequelize-cli db:migrate:undo:all",
    "db:migrate:status": "sequelize-cli db:migrate:status",
    "db:seed": "sequelize-cli db:seed:all",
    "db:seed:undo": "sequelize-cli db:seed:undo:all",
    "db:reset": "sequelize-cli db:migrate:undo:all && sequelize-cli db:migrate && sequelize-cli db:seed:all",
    "db:setup": "npm run db:create && npm run db:migrate && npm run db:seed",
    "migration:create": "sequelize-cli migration:generate --name",
    "seeder:create": "sequelize-cli seed:generate --name",
    "db:auto-migrate": "node scripts/run-migrations.js migrate",
    "db:auto-status": "node scripts/run-migrations.js status",
    "db:auto-reset": "node scripts/run-migrations.js reset",
    "test:auth": "node scripts/test-auth.js",
    "test:db": "node scripts/test-auth.js database",
    "test:db-connection": "node scripts/test-db-connection.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
